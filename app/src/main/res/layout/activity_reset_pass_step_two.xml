<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:orientation="vertical"
    tools:context=".ResetPassStepTwoActivity">

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:src="@drawable/ic_baseline_arrow_back_ios_24" />

    <TextView
        android:lines="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="ĐẶT LẠI\nMẬT KHẨU"
        android:textAlignment="center"
        android:textSize="40sp"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:lines="3"
        android:text="Chúng tôi đã gửi một mã xác thực\nvào số điện thoại của bạn.\nBạn vui lòng nhập mã đó tại đây."
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center">

        <EditText
            android:id="@+id/txtCode1"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:background="@drawable/custom_edittext_type_1"
            android:inputType="number"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:maxLength="1"
            tools:ignore="LabelFor" />

        <EditText
            android:id="@+id/txtCode2"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:background="@drawable/custom_edittext_type_1"
            android:inputType="number"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:maxLength="1"
            tools:ignore="LabelFor" />

        <EditText
            android:id="@+id/txtCode3"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:background="@drawable/custom_edittext_type_1"
            android:inputType="number"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:maxLength="1"
            tools:ignore="LabelFor" />

        <EditText
            android:id="@+id/txtCode4"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:background="@drawable/custom_edittext_type_1"
            android:inputType="number"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:maxLength="1"
            tools:ignore="LabelFor" />

        <EditText
            android:id="@+id/txtCode5"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:background="@drawable/custom_edittext_type_1"
            android:inputType="number"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:maxLength="1"
            tools:ignore="LabelFor" />

        <EditText
            android:id="@+id/txtCode6"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:background="@drawable/custom_edittext_type_1"
            android:inputType="number"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:maxLength="1"
            tools:ignore="LabelFor" />
    </LinearLayout>

    <TextView
        android:id="@+id/resendCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="GỬI LẠI MÃ"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FDB824" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnNext"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/custom_button"
            android:text="Tiếp tục"
            android:textAllCaps="false"
            android:textColor="@color/blue"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:visibility="gone" />
    </FrameLayout>

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Mã xác thực không đúng."
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textColor="#FFC107" />
</LinearLayout>